{
    "name": "sftp",
    "displayName": "sftp",
    "description": "Auto sync your work to remote SFTP server",
    "version": "0.4.4",
    "publisher": "liximomo",
    "engines": {
        "vscode": "^1.0.0"
    },
    "bugs": {
        "url": "https://github.com/liximomo/vscode-sftp/issues",
        "email": "liximomo@gmail.com"
    },
    "homepage": "https://github.com/liximomo/vscode-sftp/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/liximomo/vscode-sftp.git"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "sftp",
        "sync",
        "remote"
    ],
    "activationEvents": [
        "*"
    ],
    "icon": "icon.png",
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "sftp.config.default",
                "title": "SFTP: Config"
            },
            {
                "command": "sftp.trans.remote",
                "title": "SFTP: Upload"
            },
            {
                "command": "sftp.trans.local",
                "title": "SFTP: Download"
            },
            {
                "command": "sftp.sync.remote",
                "title": "SFTP: Sync To Remote"
            },
            {
                "command": "sftp.sync.local",
                "title": "SFTP: Sync To Local"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "sftp.sync.remote",
                    "group": "sftp.sync@1",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "sftp.sync.local",
                    "group": "sftp.sync@2",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "sftp.trans.remote",
                    "group": "sftp.trans@3"
                },
                {
                    "command": "sftp.trans.local",
                    "group": "sftp.trans@4"
                }
            ],
            "editor/context": [
                {
                    "command": "sftp.trans.remote",
                    "group": "sftp.trans@1"
                },
                {
                    "command": "sftp.trans.local",
                    "group": "sftp.trans@2"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "mocha": "^2.3.3",
        "typescript": "^2.0.3",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "fast-memoize": "^2.2.7",
        "fs-extra": "^3.0.1",
        "glob": "^7.1.1",
        "minimatch": "^3.0.4",
        "ssh2": "^0.5.4",
        "stat-mode": "^0.2.2"
    }
}
